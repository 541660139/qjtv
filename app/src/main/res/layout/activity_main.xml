<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/activity_main_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/activity_main_watchball_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/home_page_bottom_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/raid_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/activity_main_learnball_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/watch_ball_bottom_selector"
            android:gravity="center_horizontal"
            android:text="看点"
            android:textColor="@color/raid_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/activity_main_mall_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/community_bottom_selector"
            android:gravity="center_horizontal"
            android:text="热门"
            android:textColor="@color/raid_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/activity_main_mine_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/mine_bottom_selector"
            android:gravity="center_horizontal"
            android:text="我的"
            android:textColor="@color/raid_text_color"
            android:textSize="12sp" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_main_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_main_rg"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/activity_main_vp"
        android:background="@color/dbdbdb" />
</com.zhy.autolayout.AutoRelativeLayout>