<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <!-- 标题 -->
    <include
        android:id="@+id/title_layout"
        layout="@layout/include_title" />


    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="验证码已经发送到  13688888888"
        android:textColor="#EE9686"
        android:textSize="12dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="    手机号："
                android:textSize="18dp" />

            <EditText
                android:id="@+id/activity_findpwd_phone_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="6"
                android:maxLines="1"
                android:padding="10dp"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="    验证码："
                android:textSize="18dp" />

            <EditText
                android:id="@+id/activity_findpwd_code_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:maxLength="6"
                android:maxLines="1"
                android:padding="10dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/activity_findpwd_send_code_tv"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#EBEBEB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="    新密码："
                android:textSize="18dp" />

            <EditText
                android:id="@+id/activity_findpwd_pwd_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="密码(6-14位)"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:padding="10dp"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/activity_register_show_pwd_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:padding="10dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="密码需要同时包含数字和字母,长度不小于6位"
        android:textColor="#868686"
        android:textSize="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/activity_findpwd_find_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="找回密码"
        android:textColor="@color/white"
        android:textSize="20dp" />
</LinearLayout>