<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color999999"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <RelativeLayout
        android:id="@+id/user_setting_name_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="收货人:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/address_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/user_name_tv"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:gravity="end"
            android:hint="输入收货人姓名"
            android:maxLength="5"
            android:textColor="@color/black"
            android:textColorHint="@color/color999999"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"
            android:background="@color/color999999" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_setting_phone_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="联系电话:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/address_phone_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/user_phone_tv"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:gravity="end"
            android:hint="输入收货人联系电话"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textColorHint="@color/color999999"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"
            android:background="@color/color999999" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_setting_place_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="所在地区:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/user_setting_place_enter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:src="@drawable/land_live_half_back_bg" />

        <TextView
            android:id="@+id/user_setting_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/user_setting_place_enter_btn"
            android:layout_toRightOf="@id/user_place_tv"
            android:layout_toStartOf="@+id/user_setting_place_enter_btn"
            android:gravity="center"
            android:singleLine="true"
            android:text="请选择地区"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignLeft="@id/user_place_tv"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignLeft="@id/user_phone_tv"
        android:layout_alignParentBottom="true"
        android:background="@color/color999999" />

    <EditText
        android:id="@+id/address_smaller_edt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:gravity="top"
        android:textCursorDrawable="@null"
        android:hint="输入详细地址"
        android:maxLength="25"
        android:padding="10dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/put_address_save_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="10dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/circle_corner_shape"
        android:gravity="center"
        android:padding="10dp"
        android:text="保存"
        android:textSize="15sp"
        android:textColor="@color/white" />
</LinearLayout>
