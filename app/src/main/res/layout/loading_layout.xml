<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activity_base_loading_fail_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/activity_base_loading_fail_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/loading_fail"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="网络异常哦，点击屏幕刷新"
                android:textColor="@color/color999999" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_base_loading_no_data_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/activity_base_loading_no_data_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/data_empty"
                android:visibility="visible" />

            <TextView
                android:id="@+id/activity_base_loading_no_data_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="当前没有数据哦~"
                android:textColor="@color/color999999" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_base_loading_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/activity_base_loading_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/rotate_anim" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="正在加载中..."
                android:textColor="@color/color999999" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>