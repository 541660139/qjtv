<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--<include layout="@layout/include_title"/>-->
    <!--首页标题-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"

        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fragment_mall_order_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="left|center_vertical"
            android:text="订单"
            android:padding="5dp"
            android:textColor="@color/colorOrigin"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="商城"
            android:textColor="@color/color666666"
            android:textSize="19dp" />
        <ImageView
            android:id="@+id/fragment_mall_search_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/search"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dbdbdb"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/fragment_mall_search_edt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入搜索问题"
            android:textCursorDrawable="@null"
            android:layout_gravity="bottom"
            android:textSize="15sp"
            android:drawableLeft="@mipmap/ic_launcher"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/fragment_mall_search_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="搜索"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_mall_tablayout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_mall_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        />
