<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_personal_warehouse_gift_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/video_place_holder"
            android:scaleType="centerCrop" />

        <CheckBox
            android:id="@+id/item_personal_warehouse_cb"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/y35"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y15"
            android:background="@drawable/address_receiver_rb_selector"
            android:button="@null"
            android:checked="false" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_personal_warehouse_gift_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="爆米花"
        android:textColor="@color/color333333"
        android:textSize="@dimen/y30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x20"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_personal_warehouse_reduce_tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/x1"
            android:background="@drawable/circle_corner_white"
            android:gravity="center"
            android:text="一"
            android:textColor="@color/color999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_personal_warehouse_number_tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/x1"
            android:background="@drawable/circle_corner_gray"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/color999999"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/item_personal_warehouse_add_tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/x1"
            android:background="@drawable/circle_corner_gray"
            android:gravity="center"
            android:text="十"
            android:textColor="@color/color999999"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>