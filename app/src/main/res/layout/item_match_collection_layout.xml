<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="@dimen/y50">

    <TextView
        android:id="@+id/item_match_collection_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO.179" />

    <LinearLayout
        android:id="@+id/item_match_collection_rate_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x35"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.lwd.qjtv.view.RoundImageView
                android:id="@+id/item_match_collection_left_head_riv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/video_place_holder" />

            <TextView
                android:id="@+id/item_match_collection_left_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLength="4"
                android:text="塞尔比"
                android:textColor="@color/color333333"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:gravity="center_horizontal"
                android:text="VS"
                android:textColor="@color/color333333"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/item_match_collection_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="5月4日 16:30"
                android:textColor="@color/color999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_match_collection_guess_tv"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:layout_marginTop="@dimen/y40"
                android:background="@drawable/circle_corner_shape"
                android:gravity="center"
                android:text="竞猜"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_match_collection_bifen_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="10dp"
                android:text="2:3"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.lwd.qjtv.view.RoundImageView
                android:id="@+id/item_match_collection_right_head_riv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/video_place_holder" />

            <TextView
                android:id="@+id/item_match_collection_right_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLength="4"
                android:text="塞尔比"
                android:textColor="@color/color333333"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_match_collection_player_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="@drawable/circle_corner_shape"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:text="播放"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_guess_center_guess_tv"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/circle_corner_shape"
        android:gravity="center"
        android:text="竞猜"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>