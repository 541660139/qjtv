<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_recharge_recorde_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信支付"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="@color/color333333"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/item_recharge_recorde_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.08.08.3.3"
        android:layout_alignParentLeft="true"
        android:textColor="@color/color333333"
        android:layout_below="@id/item_recharge_recorde_type_tv"
        android:textSize="16sp"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/item_recharge_recorde_cost_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+100.00"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/text_color_red_a"
        android:textSize="16sp"
        android:padding="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color999999"
        android:layout_below="@id/item_recharge_recorde_time_tv"
        />
</RelativeLayout>