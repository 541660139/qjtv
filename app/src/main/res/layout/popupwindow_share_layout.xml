<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/share_wechat_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/wechat_pay"
            android:gravity="center"
            android:text="微信" />

        <TextView
            android:id="@+id/share_qq_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/wechat_pay"
            android:gravity="center"
            android:text="QQ" />

        <TextView
            android:id="@+id/share_sina_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/wechat_pay"
            android:gravity="center"
            android:text="新浪" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/share_moments_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/wechat_pay"
            android:gravity="center"
            android:text="朋友圈" />

        <TextView
            android:id="@+id/share_qq_zone_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/wechat_pay"
            android:gravity="center"
            android:text="QQ空间" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/wechat_pay"
            android:gravity="center"
            android:text="新浪"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>