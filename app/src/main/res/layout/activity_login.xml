<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <ImageView
            android:id="@+id/activity_login_quit_iv"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@mipmap/exit"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/activity_login_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="注册"
            />
    </LinearLayout>

    <!-- 标题 -->
    <include
        android:id="@+id/title_layout"
        android:visibility="gone"
        layout="@layout/include_title"/>
    <include
        android:id="@+id/loading_layout"
        android:visibility="gone"
        layout="@layout/loading_anim"/>
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/app"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/dialog_circle_corner_bg"
        android:orientation="vertical"
        android:paddingLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号："
                android:visibility="gone"
                android:padding="10dp"
                android:textSize="18dp"
                />
        <EditText
            android:id="@+id/activity_login_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="手机号/用户名/账号"
            android:inputType="phone"
            android:textCursorDrawable="@null"
            android:maxLength="11"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="18dp" />
            </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#EBEBEB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    密码："
                android:visibility="gone"
                android:padding="10dp"
                android:textSize="18dp"
                />
            <EditText
                android:id="@+id/activity_login_pwd_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="密码(6-14位)"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:maxLength="14"
                android:maxLines="1"
                android:padding="10dp"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/activity_login_login_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y60"
        android:background="@drawable/dialog_circle_corner_login_bg"
        android:gravity="center"
        android:text="登录"
        android:enabled="false"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/activity_login_forget_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/y30"
        android:layout_gravity="right"
        android:layout_margin="@dimen/x20"
        android:text="忘记密码?"
        android:textColor="@color/white"
        android:textSize="15dp" />

