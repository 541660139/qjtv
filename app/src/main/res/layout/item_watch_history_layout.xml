<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x20"
        >

        <CheckBox
            android:id="@+id/follower_manager_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/address_receiver_rb_selector"
            android:button="@null"
            android:checked="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/home_fragment_grid_item_big_iv_box"
            android:orientation="vertical">

            <TextView
                android:id="@+id/follower_list_item_intro_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年世锦赛"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_video_collection_match_people_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="丁俊晖VS奥沙利文"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/follower_list_item_civ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_video_collection_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01:26:41"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/home_fragment_grid_item_big_iv_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/follower_manager_checkbox"
            android:layout_toRightOf="@+id/follower_manager_checkbox">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.lwd.qjtv.view.RoundImageViewTo
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/y17"
                    android:scaleType="fitXY"
                    android:src="@mipmap/video_place_holder" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_fragment_watchball_score_tv"
                android:layout_width="35dp"
                android:layout_height="16dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dialog_circle_corner_bg"
                android:gravity="center"
                android:text="8.0"
                android:textColor="@color/color666666"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color999999" />

</LinearLayout>