<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/x30">

        <TextView
            android:id="@+id/item_myguess_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017年5月1日 12:00 2017世锦赛 投注金额:100"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x23" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y27"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/item_myguess_top_starinfo_civ"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:src="@mipmap/video_place_holder" />

                    <TextView
                        android:id="@+id/item_myguess_top_starinfo_name_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="塞尔比"
                        android:textSize="@dimen/x30" />

                    <TextView
                        android:id="@+id/item_myguess_top_starinfo_score_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x60"
                        android:text="10"
                        android:textSize="@dimen/x30" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/y23"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/item_myguess_bottom_starinfo_civ"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:src="@mipmap/video_place_holder" />

                    <TextView
                        android:id="@+id/item_myguess_bottom_starinfo_name_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="塞尔比"
                        android:textSize="@dimen/x30" />

                    <TextView
                        android:id="@+id/item_myguess_bottom_starinfo_score_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x60"
                        android:text="10"
                        android:textSize="@dimen/x30" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="@dimen/x2"
                android:layout_height="@dimen/y100"
                android:background="@color/f3f3f3" />

            <LinearLayout
                android:layout_width="@dimen/x170"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_myguess_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="赢"
                    android:textColor="@color/colorOrigin"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/item_myguess_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="+500"
                    android:textColor="@color/colorOrigin"
                    android:textSize="@dimen/x30" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_guess_wagger_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=" 投注金额:100"
            android:textColor="@color/color333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_guess_peilv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:text=" 赔率:100"
            android:textColor="@color/color333333"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/f3f3f3" />
</LinearLayout>